<Window x:Class="SQLiteDS_ChatGPT_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteDS_ChatGPT_2.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="420">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="135"/>
            <RowDefinition Height="*" MinHeight="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                    Content="시작"
                    Margin="2"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="Green"
                    Foreground="White"
                    Click="Button_Start_Click"/>
            <Button Grid.Column="3" Grid.Row="0" Grid.RowSpan="2"
                    Content="종료"
                    Margin="2"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="Red"
                    Click="Button_Exit_Click"/>
            <local:StatusHeader Grid.Row="0" Grid.Column="0"
                                Header="전체 작업수"/>
            <local:StatusValue Grid.Row="0" Grid.Column="1"
                               Value="{Binding TotalCount}"/>
            <local:StatusHeader Grid.Row="1" Grid.Column="0"
                                Header="선물 예상가"/>
            <local:StatusValue Grid.Row="1" Grid.Column="1"
                               Value="{Binding ExpectFut}"
                               ValueBackground="{Binding ExpectFutBg}"/>
            <local:StatusHeader Grid.Row="2" Grid.Column="0"
                                Header="선물 현재가"/>
            <local:StatusValue Grid.Row="2" Grid.Column="1"
                               Value="{Binding CurrentFut}"
                               ValueBackground="{Binding CurrentFutBg}"/>
            <local:StatusHeader Grid.Row="2" Grid.Column="2"
                                Header="선물 호가"/>
            <local:StatusValue Grid.Row="2" Grid.Column="3"
                               Value="{Binding BidNask}"
                               ValueBackground="{Binding BidNaskBg}"/>
            <local:StatusHeader Grid.Row="3" Grid.Column="0"
                                Header="옵션 현재가"/>
            <local:StatusValue Grid.Row="3" Grid.Column="1"
                               Value="{Binding CurrentOpt}"
                               ValueBackground="{Binding CurrentOptBg}"/>
            <local:StatusHeader Grid.Row="3" Grid.Column="2"
                                Header="매매 동향"/>
            <local:StatusValue Grid.Row="3" Grid.Column="3"
                               Value="{Binding Trading}"
                               ValueBackground="{Binding TradingBg}"/>
            <local:StatusHeader Grid.Row="4" Grid.Column="0"
                                Header="코스피 지수"/>
            <local:StatusValue Grid.Row="4" Grid.Column="1"
                               Value="{Binding Kospi}"
                               ValueBackground="{Binding KospiBg}"/>
            <local:StatusHeader Grid.Row="4" Grid.Column="2"
                                Header="코스피 200"/>
            <local:StatusValue Grid.Row="4" Grid.Column="3"
                               Value="{Binding Kos200}"
                               ValueBackground="{Binding Kos200Bg}"/>
        </Grid>
        <ListBox x:Name="LogList"
                 Grid.Row="1"
                 ItemsSource="{Binding LogText}"
                 FontSize="14"
                 Margin="5,0,5,0"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        <TextBlock Grid.Row="2"
                   Text="{Binding TxtStatus}"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Background="DarkGreen"
                   Foreground="LightPink"
                   Margin="5"/>
    </Grid>
</Window>
